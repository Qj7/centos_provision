#!/usr/bin/env powscript


fail(message, see_logs)
  log_and_print_err "*** $(translate errors.program_failed) ***"
  log_and_print_err $message
  if isset $see_logs
    log_and_print_err "$(translate errors.see_logs)"
  print_err
  clean_up
  exit 1


log_and_print_err(message)
  print_err $message 'red'
  debug $message 'red'
